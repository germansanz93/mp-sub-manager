{
  "name": "meli-sub-manager",
  "version": "1.0.0",
  "description": "Gestor de Suscripciones de Mercado Pago con interfaz gr√°fica",
  "main": "src/index.js",
  "homepage": "https://github.com/tu-usuario/meli-sub-manager",
  "scripts": {
    "start": "electron ./src",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "mercadopago",
    "subscriptions",
    "electron",
    "desktop",
    "payment",
    "management"
  ],
  "author": {
    "name": "German Sanz",
    "email": "germansanz93@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.4.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "keytar": "^7.9.0"
  },
  "build": {
    "appId": "com.tuempresa.meli-sub-manager",
    "productName": "Meli Sub Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "title": "Meli Sub Manager",
      "icon": "build/icon.icns"
    }
  }
}
